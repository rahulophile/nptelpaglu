{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",  // ✅ Node16/nodenext for Vite + ESM
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // ✅ skip library type check
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // ✅ React default import issue fix
    "allowImportingTsExtensions": true,  // ✅ .tsx import allowed
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
